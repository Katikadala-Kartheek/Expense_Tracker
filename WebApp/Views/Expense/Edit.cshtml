@model WebApp.Models.Expense

<div class="container mt-3">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg">
                <div class="card-header bg-primary text-white text-center">
                    <h3 class="mb-0">Add New Expense</h3>
                </div>
                <div class="card-body">
                    <form method="post">
                        <div class="form-group">
                            <label for="UserId"><i class="fas fa-user"></i> User ID</label>
                            <input type="hidden" class="form-control" id="UserId" name="UserId" value="@Model.UserId" required placeholder="Enter User ID">
                        </div>
                        <div class="form-group mt-3">
                            <label for="Amount"><i class="fas fa-dollar-sign"></i> Amount</label>
                            <input type="number" step="0.01" class="form-control" id="Amount" name="Amount" value="@Model.Amount" required placeholder="Enter amount">
                        </div>
                        @* @{ *@
                        @*     var categories = new List<SelectListItem> *@
                        @* { *@
                        @* new SelectListItem { Text = "Groceries", Value = "Groceries" }, *@
                        @* new SelectListItem { Text = "Utilities", Value = "Utilities" }, *@
                        @* new SelectListItem { Text = "Rent", Value = "Rent" }, *@
                        @* new SelectListItem { Text = "Transportation", Value = "Transportation" }, *@
                        @* new SelectListItem { Text = "Health", Value = "Health" }, *@
                        @* new SelectListItem { Text = "Insurance", Value = "Insurance" }, *@
                        @* new SelectListItem { Text = "Personal", Value = "Personal" }, *@
                        @* new SelectListItem { Text = "Entertainment", Value = "Entertainment" }, *@
                        @* new SelectListItem { Text = "Miscellaneous", Value = "Miscellaneous" } *@
                        @* }; *@
                        @* } *@
                        <div class="form-group mt-3">
                            <label>Category</label>
                            <select class="form-control" asp-for="CategoryId" asp-items="ViewBag.Categories" class="form-control" required>
                                <option value="">-- Select Category --</option>
                            </select>
                        </div>
                        <div class="form-group mt-3">
                            <label for="Date"><i class="fas fa-calendar-alt"></i> Date</label>
                            <input type="date" class="form-control" id="Date" name="Date" value="@Model.Date" required>
                        </div>
                        <div class="form-group mt-3">
                            <label for="Description"><i class="fas fa-edit"></i> Description</label>
                            <textarea class="form-control" id="Description" name="Description" rows="3" placeholder="Enter description"></textarea>
                        </div>
                        <button type="submit" class="btn btn-success w-100 mt-4">
							<i class="fas fa-plus-circle"></i> Edit Expense
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

