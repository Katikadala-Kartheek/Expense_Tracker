@model WebApp.Models.ViewModels.RegisterViewModel

<div class="container d-flex justify-content-center align-items-center">
    <div class="col-md-5">
        <div class="card shadow-lg">
            <div class="card-header bg-primary text-white text-center">
                <h3 class="mb-0"><i class="fas fa-user-plus"></i> Register</h3>
            </div>
            <div class="card-body">
                <form asp-action="Register" method="post" id="registerForm">
                    <div class="form-group">
                        <label asp-for="Email"><i class="fas fa-envelope"></i> Email</label>
                        <input asp-for="Email" class="form-control" placeholder="Enter your email" required />
                    </div>
                    <div class="form-group mt-3">
                        <label asp-for="Password"><i class="fas fa-lock"></i> Password</label>
                        <input asp-for="Password" type="password" class="form-control" placeholder="Enter your password" id="password" required />
                    </div>
                    <div class="form-group mt-3">
                        <label asp-for="ConfirmPassword"><i class="fas fa-lock"></i> Confirm Password</label>
                        <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="Re-enter your password" id="confirmPassword" required />
                        <small id="passwordMatchError" class="text-danger d-none">Passwords do not match</small>
                    </div>
                    <button type="submit" class="btn btn-success w-100 mt-4" id="registerBtn" disabled>
                        <i class="fas fa-user-check"></i> Register
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- Include Bootstrap & FontAwesome for Icons -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">

<style>
    body {
        background-color: #f4f4f4;
    }
</style>

<!-- Password Matching Script -->
<script>
    document.getElementById("registerForm").addEventListener("input", function () {
        let password = document.getElementById("password").value;
        let confirmPassword = document.getElementById("confirmPassword").value;
        let errorText = document.getElementById("passwordMatchError");
        let registerBtn = document.getElementById("registerBtn");
        if (password !== confirmPassword) {
            errorText.classList.remove("d-none");
            registerBtn.disabled = true;
        } else {
            errorText.classList.add("d-none");
            registerBtn.disabled = false;
        }
    });
</script>